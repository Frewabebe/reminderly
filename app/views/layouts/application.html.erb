<!DOCTYPE html>
<html>
<head>
  <title>Reminderly</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <h3><%= link_to "All Todos", todos_path %></h3>
    <h3><%= link_to "Incomplete Todos", incomplete_todos_path %></h3>
    <h3><a href="javascript:history.back()">Back</a></h3>
  </nav>

  <% flash.each do |type, message| %>
    <p class="flash <%= type %>"><%= message %></p>
  <% end %>

  <%= yield %>

  <footer>
    Get stuff done!
  </footer>

</body>
</html>
